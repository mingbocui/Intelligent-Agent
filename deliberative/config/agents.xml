<?xml version="1.0" encoding="ISO-8859-1"?>

<agents>
	<!-- A list of agents and their behavior classes -->

	<!-- #### DELIBERATIVE AGENTS ### -->
	<agent name="deliberative-random">
		<set class-path="bin/"/>
		<set class-name="deliberative_rla.DeliberativeTemplate"/>
		<set algorithm="BFS"/>
	</agent>

	<agent name="deliberative-main">
		<set class-path="bin/"/>
		<set class-name="deliberative_rla.DeliberativeAgent"/>
		<set use-sane-state="true"/>
		<set algorithm="ASTAR"/>

	</agent>
	<agent name="deliberative-main-astar">
		<set class-path="bin/"/>
		<set class-name="deliberative_rla.DeliberativeAgent"/>
		<set algorithm="ASTAR"/>
	</agent>
	<agent name="deliberative-main-bfs">
		<set class-path="bin/"/>
		<set class-name="deliberative_rla.DeliberativeAgent"/>
		<set use-sane-state="true"/>
		<set algorithm="BFS"/>
	</agent>
</agents>
