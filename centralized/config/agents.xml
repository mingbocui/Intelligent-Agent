<?xml version="1.0" encoding="ISO-8859-1"?>

<agents>
	<!-- A list of agents and their behavior classes -->

	<!-- #### CENTRALIZED AGENTS ### -->
	<agent name="centralized-random">
		<set class-path="bin/"/>
		<set class-name="centralized_rla.CentralizedTemplate"/>
	</agent>

	<agent name="centralized-rla">
		<set class-path="bin/"/>
		<set class-name="centralized_rla.CentralizedAgent"/>
		<set random-seed="42"/>
		<set random-solution-selection="0.35"/>
		<set max-iterations="300"/>
		<set nb-retained-solutions="10"/>
		<set use-spanning-tree-for-cost="true"/>
		<set use-random-init-solution="false"/>
		<set use-closest-pickup-solution="true"/>
		<set use-closest-pickup-solution-by-pickup="true"/>
	</agent>

</agents>
